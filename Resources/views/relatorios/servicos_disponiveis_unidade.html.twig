{% trans_default_domain 'NovosgaReportsBundle' %}

<div class="header">
    <h2>{{ relatorio.dados.unidade }}</h2>
</div>
<table class="table table-bordered table-striped">
    <thead class="thead-light">
        <tr>
            <th>{% trans %}report.service.prefix{% endtrans %}</th>
            <th>{% trans %}report.service{% endtrans %}</th>
        </tr>
    </thead>
    <tbody>
        {% for su in relatorio.dados.servicos %}
            <tr>
                <td class="w25 center">{{ su.sigla }}</td>
                <td class="strong">
                    {{ su.servico.nome }}
                    {% if su.servico.subServicos|length %}
                        <ul>
                            {% for subServico in su.servico.subServicos %}
                                <li>{{ subServico.nome }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>